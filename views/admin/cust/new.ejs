<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/adminHead') %>
    <script src="/scripts/custAdmin.js" defer></script>
    <title>New Customer</title>
</head>
<body>
    <%- include('../partials/adminHeader') %>
    <%- include('../partials/adminNav') %>
    <article class="body__article-details black-text-shadow">
        <form id="form__new-user" action="/admin/cust" method="POST">
            <table class="table__farm-details text-align-left">
                <th colspan="2" class="text-align-center">Customer Details</th>
                <tr>
                    <td>
                        <label for="name">Name:</label>
                    </td>
                    <td>
                        <input class="input__user-name" type="text" placeholder="Your Name" name="name" required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="address">Address:</label>
                    </td>
                    <td>
                        <input class="input__user-address" type="text" placeholder="address" name="address">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="city">City:</label>
                    </td>
                    <td>
                        <input class="input__user-city" type="text" placeholder="City" name="city">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="state">State:</label>
                    </td>
                    <td>
                        <input class="input__user-state" type="text" placeholder="State" name="state">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="zip">Zipcode:</label>
                    </td>
                    <td>
                        <input class="input__user-zip" type="text" name="zip" placeholder="xxxxx" maxlength="5">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="phone">Phone:</label>
                    </td>
                    <td>
                        <!-- <input type="tel" name="phone" maxlength="12" required> -->
                        <input class="input__user-phone" type="tel" name="phone" maxlength="12" placeholder="xxx-xxx-xxxx" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="">Email:</label>
                    </td>
                    <td>
                        <input class="input__user-email" type="email" name="email" placeholder="me@email.com" required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="password">Password:</label> 
                    </td>
                    <td>
                        <input type="password" name="password" required>
                    </td>
                </tr>
                <tr>
                    <td class="text-align-right" colspan="2">
                        <button id="btn__clear-cust-form" class="btn-med" type="button">Clear Form</button>
                        <button class="btn-med" type="submit">Add Customer</button>
                    </td>
                </tr>
            </table>
        </form>
    </article>
    <%- include('../partials/adminFooter') %>
</body>
</html>