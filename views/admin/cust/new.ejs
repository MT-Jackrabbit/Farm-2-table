<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/adminHead') %>
    <title>New Customer Page</title>
</head>
<body>
    <div class="header">
        <h1>Add New Customer</h1>
    </div>
    <%- include('../partials/adminNav') %>
    <section class="display-data align-center-hor">
        <form action="/admin/cust" method="POST">
            <div class="cust-details">
                <div class="row align-center-vert blk-bdr-bottom">
                    <p id="p__new-cust">New Customer</p>
                </div>
                <div class="row align-center-vert">
                    <div class="col-10">
                        Name:
                    </div>
                    <div class="col-30">
                        <input type="text" name="name" required>
                    </div>
                </div>
                <div class="row align-center-vert">
                    <div class="col-10">
                        Address:
                    </div>
                    <div class="col-30">
                        <input type="text" name="address">
                    </div>
                </div>
                <div class="row align-center-vert">
                    <div class="col-10">
                        City:
                    </div>
                    <div class="col-30">
                        <input type="text" name="City">
                    </div>
                </div>
                <div class="row align-center-vert">
                    <div class="col-10">
                        State:
                    </div>
                    <div class="col-30">
                        <input type="text" name="state">
                    </div>
                </div>
                <div class="row align-center-vert">
                    <div class="col-10">
                        Zipcode:
                    </div>
                    <div class="col-30">
                        <input type="text" name="zip" maxlength="5">
                    </div>
                </div>
                <div class="row align-center-vert">
                    <div class="col-10">
                        Phone:
                    </div>
                    <div class="col-30">
                        <input type="tel" name="phone" maxlength="12" required>
                    </div>
                </div>
                <div class="row align-center-vert">
                    <div class="col-10">
                        Email:
                    </div>
                    <div class="col-30">
                        <input type="email" name="email" required>
                    </div>
                </div>
                <div class="row align-center-vert">
                    <div class="col-10">
                        Password:
                    </div>
                    <div class="col-30">
                        <input type="password" name="password" required>
                    </div>
                </div>
                <div class="row align-center-vert">
                    <button class="btn-med" type="button">Clear Form</button>
                    <button class="btn-med" type="submit">Add Customer</button>
                </div>
            </div>
        </form>
    </section>
    <footer>

    </footer>
</body>
</html>