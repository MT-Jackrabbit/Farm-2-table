<%- include('../../head') %>
  <link rel="stylesheet" href="/styles/sub-form.css">
  <title>Sign in</title>
</head>

<body>
  <%- include('../../header') %>
  <h1>Sign in</h1>
  <div class="container">
    <form action="/login" method="POST">
      <table id="table__sign-in">
        <thead>
          <th colspan="2">
            <h3>Welcome back!</h3>
            <div class="login-fail">
              <p <%= (invalid.valid)? 'hidden' : '' %>>Invalid username or password!</p>
            </div>
          </th>
        </thead>
          <tr>
            <td class="txt-align-left">
              <label for="email">Email :</label>
            </td>
            <td class="txt-align-right">
              <input name="email" type="text" placeholder="Email" required>
            </td>
          </tr>
          <tr>
            <td class="txt-align-left">
              <label for="password">Password :</label>
            </td>
            <td class="txt-align-right">
              <input name="password" type="password" placeholder="password" required>
            </td>
          </tr>
          <tr class="txt-align-right">
            <td colspan="2">
              <button type="submit">Sign in</button>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <small>Don't have an account? Click <a href="/register">here</a> to sign up!</small>
            </td>
          </tr>
      </table>
    </form>
  </div>
  <%- include('../../footer') %>

  </html>