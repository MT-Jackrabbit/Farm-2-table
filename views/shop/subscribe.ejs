<%- include('../head') %>
<link rel="stylesheet" href="/styles/sub-form.css">
<title>Subscribe</title>
</head>
<body>
  <%- include('../header') %>
  <h1>Subscribe to our newsletter</h1>
  <div class="container">
    <div class="div__newsletter">
    <p>Sign up to receive farm and product updates!</p>
    <form action="/" method="POST">
      <table id="table__sign-in">
          </thead>
          <tr>
            <td class="txt-align-left">
              <label for="name">Name :</label>
            </td>
            <td class="txt-align-right">
              <input type="text" placeholder="Name" required>
            </td>
          </tr>
          <tr>
            <td class="txt-align-left">
              <label for="email">Email :</label>
            </td>
            <td class="txt-align-right">
              <input type="text" placeholder="example@email.com" required>
            </td>
          </tr>
          <tr class="txt-align-right">
            <td colspan="2">
              <button type="submit">Subscribe</button>
            </td>
          </tr>
      </table>
    </form>
    </div>
    <img class="sub-img"
      src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQGI5HjdPkeIu3LCfh5IB5jhM-lVhZefVHh5XJlHaFMZ5LY8cXjpg&s"
      alt="subscribe">
  </div>
  <%- include('../footer') %>
</body>

</html>